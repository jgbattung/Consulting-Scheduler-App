<div class="max-w-3xl mx-auto px-4">
    <%= link_to root_path do %>
      <div class="flex items-center mb-4 font-semibold text-gray-500 hover:text-gray-800 transition-all">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M15.707 15.707a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 010 1.414zm-6 0a1 1 0 01-1.414 0l-5-5a1 1 0 010-1.414l5-5a1 1 0 011.414 1.414L5.414 10l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg></p>
        <span class="px-2">Back to Dashboard</span>
      </div>
    <% end %>
  
  <div class="max-w-5xl mx-auto pb-8 rounded-2xl shadow-xl border">
    <div class="px-8 py-10">
      <h1 class="flex-1 font-bold text-3xl">Consultation details for <%= @consultation.name %></h1>
      <% if @consultation.status == "approved" %>
        <p class="text-gray-400">This consultation is <span class="text-green-600 font-bold">approved</span> and scheduled on <span class="font-bold text-black"><%= @consultation.start_at %></span></p>
      <% elsif @consultation.status == "pending" %>
        <p class="text-gray-400">This consultation is still <span class="text-yellow-600 font-bold">pending</span>. Please approve or unapprove before <span class="font-bold"><%= @consultation.start_at %></span></p>
      <% elsif @consultation.status == "unapproved" %>
        <p class="text-gray-400">This consultation was tagged <span class="text-red-600 font-bold">unapproved</span>. If changes are to be made, do so before <span class="font-bold"><%= @consultation.start_at %></span></p>
      <% end %>
      <div>
        <p class="pt-8 text-2xl font-bold">Client Information</p>
        <p>Name: <span class="font-bold"><%= @consultation.name %></span></p>
        <p>Email: <span class="font-bold"><%= @consultation.email %></span></p>
        <p>Consultation Schedule: <span class="text-sky-600 font-bold"><%= @consultation.start_at %></span> to <span class="text-sky-600 font-bold"><%= @consultation.end_at %></span></p>
        <p>Consulting package: <span class="font-bold"><%= @consultation.consultation_type_id %></span></p>
      </div>
    </div>
  </div>

</div>
