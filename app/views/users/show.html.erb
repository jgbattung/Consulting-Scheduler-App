<div class="max-w-5xl mx-auto pb-8 rounded shadow-xl border">
    <div class="px-6 py-6 rounded-t-xl bg-gray-50">
        <h1 class="text-3xl font-extrabold text-center pt-4"><%= @user.name %></h1>
        <p class="text-lg text-gray-500 font-medium text-center"><%= @user.specialization %></p>
        <p class="text-center text-gray-600 pt-6">Select your preferred consultation package from the options below
    </div> 

    <div class="grid grid-cols-3 gap-6 px-8 pt-4">
    <% @user.consultation_types.each do |consultation_type| %>
        <%= render "users/consultation_type", consultation_type: consultation_type %>
    <% end %>
    </div>
</div>