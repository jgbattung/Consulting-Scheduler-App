<div class="mx-5 my-5 content-center">

<h1 class="text-center text-4xl font-bold mb-5">Our Consultants</h1>

<%= render 'search/form' %>


<div class="px-20 pt-5">
	<p class="font-thin text-sm">Showing <%= pluralize(@users.count, 'result') %></p>

	<%= link_to users_path do %>
		<div class="flex items-center pt-2 font-semibold text-gray-500 hover:text-gray-800 transition-all">
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
			<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
			<span class="px-2">Back to all Consultants</span>
		</div>
	<% end %>
</div>

<div class="grid h-screen content-start gap-4 px-10 py-10 sm:grid-cols-1 sm:place-items-center md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
	<% @users.each do |user| %>
  <div class="max-w-md border bg-slate-50 px-5 py-5 text-center shadow-xl">
    <div class="inline-flex h-32 w-32 items-center justify-center rounded-full bg-sky-500 text-white py-4 px-4 mt-4 mb-4">Image here</div>
    <h1 class="text-3xl font-semibold"><%= user.name %></h1>
    <p class="text-lg font-light text-gray-600"><%= user.specialization %></p>
    <div class="px-5 py-5">
      <p>Consultations offered: <%= user.consultation_types.count %></p>
      <p>Offers free and premium consultations</p>
    </div>
		<div class="px-5 py-5">
			<%= link_to "Open Consultant Profile", user_path(consultation_link: user.consultation_link), class: button_class(theme: "secondary") %> 
		</div>
  </div>
	<% end %>
</div>
